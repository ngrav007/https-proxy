#!/bin/bash

# Test 05: Test the http-proxy with a GET request to https site
TESTNAME=$(basename $0)
OUTDIR=$(dirname $0)/output
OUTFILE=${OUTDIR}/${TESTNAME%.*}.out

# Start timer for test
echo "+ ---------- Test 06: GET HTTPS Request and Response --------- +"

echo "[*] Sending initial request to https://www.google.com/..."
fetch=$(time curl -o ${OUTFILE} -p -v -x localhost:9056 http://www.google.com/ 2>&1)
echo "[*] Sleeping for 5 seconds..."
for i in {1..5}; do
    echo -n "."
    sleep 1
done
echo ""

echo "[*] Sending second request to https://www.google.com/..."
cache=$(time curl -o ${OUTFILE} -p -v -x localhost:9056 http://www.google.com/s 2>&1)

echo "[+] Results ----------------------------------------------- +"
echo ""
echo "    [*] Time Elapsed w/ Fetch: $fetch"
echo "    [*] Time Elapsed w/ Cache: $cache"
echo ""
echo "+ --------------------------------------------------------- +"
